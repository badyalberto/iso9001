{% extends 'base.html.twig' %}

{% set cabecera = "WIP | Editar Usuario" %}
{% set titulo = "Editar usuario" %}
{% set subtitulo = "Editar usuario" %}

{% block body %}
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-md-12">
                <!--begin::Portlet-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">
                                Datos del Usuario
                            </h3>
                        </div>
                    </div>
                    <!--begin::Form-->
                    {{ form_start(form) }}
                    {# <form class="kt-form" action="{{ path('crear-usuario') }}" method="POST"> #}
                    <div class="kt-portlet__body">
                        <div class="form-group">
                            <label>Nombre</label>
                            {{ form_errors(form.nombre) }}
                            {{ form_widget(form.nombre,{ 'attr': {
                                'class' : 'form-control',
                            } }) }}
                        </div>

                        {% if status == true %}
                            <div class="invalid-feedback emailuser" style="display: block">Este email ya esta en uso
                            </div>
                        {% else %}
                            <div class="invalid-feedback emailuser" style="display: block"></div>
                        {% endif %}

                        <div class="form-group">
                            <label>Correo electr√≥nico</label>
                            {{ form_errors(form.correo) }}
                            {{ form_widget(form.correo,{ 'attr': {
                                'class' : 'form-control',
                            } }) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            {{ form_errors(form.password) }}
                            {{ form_widget(form.password,{ 'attr': {
                                'class' : 'form-control',
                            } }) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleSelect1">Tipo</label>
                            {{ form_errors(form.tipo) }}
                            {{ form_widget(form.tipo,{ 'attr': {
                                'class' : 'form-control ',
                            } }) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleSelect1">Cliente Asociado</label>
                            {{ form_errors(form.customers) }}
                            {{ form_widget(form.customers,{ 'attr': {
                                'class' : 'form-control'
                            } }) }}
                        </div>
                        <div class="form-group row">
                            <label class="col-3 col-form-label">Activo</label>

                            {# {{ form_errors(form.activo) }}
                            {{ form_widget(form.activo,{ 'attr': {
                                'class' : 'form-control',
                            } }) }} #}
                            <div class="col-3">
                                 <span class="kt-switch kt-switch--lg">
                                     <label>
                                         {% if activo == false %}
                                             <input type="checkbox" name="activo">
                                         {% else %}
                                             <input type="checkbox" checked name="activo">
                                         {% endif %}
                                         <span></span>
                                     </label>
                                 </span>
                            </div>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="kt-form__actions">
                            <button type="submit" class="btn btn-brand">
                                Guardar
                            </button>
                            <button type="reset" class="btn btn-warning">
                                Cancelar
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    {# </form> #}
                    <!--end::Form-->
                </div>
                <!--end::Portlet-->
            </div>

        </div>
    </div>

{% endblock %}
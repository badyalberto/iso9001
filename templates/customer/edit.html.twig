{% extends 'base.html.twig' %}
{% set cabecera = "WIP | Editar Cliente" %}
{% set titulo = "Editar Cliente" %}
{% set subtitulo = "Editar Cliente" %}
{% block body %}
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="row">
            <div class="col-md-12">
                <!--begin::Portlet-->
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">
                                Datos del Cliente
                            </h3>
                        </div>
                    </div>
                    <!--begin::Form-->

                    <form class="kt-form" action="{{ path('editar-cliente',{'id' : customer.id}) }}" id="edit-cliente"
                          method="POST">
                        <div class="kt-portlet__body">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input type="text" class="form-control" id="nombrec" required
                                       placeholder="Pulso Ediciones SL"
                                       name="nombre" value="{{ customer.nombre }}">
                            </div>
                            <div class="form-group">
                                <label>Alias</label>
                                <input type="text" class="form-control" id="aliasc" required placeholder="Pulso"
                                       name="alias" value="{{ customer.alias }}">
                            </div>
                            <div class="form-group">
                                <label>Persona de Contacto</label>
                                <input type="text" class="form-control" id="contactoc" required placeholder="Carles"
                                       name="contacto" value="{{ customer.pmnombre }}">
                            </div>

                            {% if status == true %}
                                <div class="invalid-feedback emailcustomer" style="display: block">Este email ya esta en
                                    uso
                                </div>
                            {% else %}
                                <div class="invalid-feedback emailcustomer" style="display: block"></div>
                            {% endif %}

                            <div class="form-group">
                                <label>Correo electr√≥nico Contacto</label>
                                <input type="email" class="form-control" required aria-describedby="emailHelp"
                                       placeholder="Enter email" name="email" id="emailc" value="{{ customer.pmmail }}">
                            </div>
                            <div class="form-group">
                                <label>Usuarios Asociados</label>
                                <select name="users[]" id="selectusers[]" multiple="multiple" class="form-control">
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.nombre }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Activo</label>
                                <div class="col-3">
                                 <span class="kt-switch kt-switch--lg">
                                     <label>
                                         {% if activo == false %}
                                             <input type="checkbox" id="activoc" name="activo">
                                         {% else %}
                                             <input type="checkbox" checked id="activoc" name="activo">
                                         {% endif %}
                                         <span></span>
                                     </label>
                                 </span>
                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__foot">
                            <div class="kt-form__actions">
                                <button type="submit" class="btn btn-brand">
                                    Guardar
                                </button>
                                <button type="reset" class="btn btn-warning">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Portlet-->
            </div>

        </div>
    </div>
{% endblock %}